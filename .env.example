# AlgoBattle Arena - Environment Variables Guide
# Copy this file to .env and fill in your values

# ============================================================================
# Firebase Configuration (Firestore database)
# ============================================================================
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# ============================================================================
# JWT Authentication (Backend token signing)
# ============================================================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production
REFRESH_SECRET=your_super_secret_refresh_key_change_in_production

# ============================================================================
# Algorand Configuration (Blockchain integration)
# ============================================================================
# Network: testnet or mainnet
ALGO_NETWORK=testnet

# Algod Server (for transactions)
ALGO_SERVER=https://testnet-algorand.api.purestake.io/ps2
ALGO_INDEXER=https://testnet-algorand.api.purestake.io/idx2
ALGO_TOKEN=your_purestake_api_key_here

# Wallet Addresses (Set after creating testnet accounts)
# Player wallet (main game account)
PLAYER_WALLET_ADDRESS=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# DAO wallet (receives 10% fees)
DAO_WALLET_ADDRESS=YYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYY
# Escrow wallet (holds stakes during matches)
ESCROW_WALLET_ADDRESS=ZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZ

# ============================================================================
# Algorand Smart Contracts & Assets
# ============================================================================
# Escrow Contract ID (for stake management)
ESCROW_CONTRACT_ID=123456

# NFT Badge ASA IDs (Testnet only - one per milestone)
BADGE_10_WINS_ASA_ID=234567
BADGE_50_WINS_ASA_ID=234568
BADGE_100_WINS_ASA_ID=234569

# Badge Manager Address (account that mints badges)
BADGE_MANAGER_ADDRESS=AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA

# ============================================================================
# Feature Flags
# ============================================================================
# Enable blockchain integration (true = use real Algo; false = mock only)
ENABLE_BLOCKCHAIN=false
# Testnet mode (true = use testnet; false = use mainnet)
TESTNET_MODE=true

# ============================================================================
# Server Configuration
# ============================================================================
PING_MESSAGE=pong
NODE_ENV=development
PORT=8080

# ============================================================================
# CORS Configuration (for production)
# ============================================================================
CORS_ORIGINS=http://localhost:8080,https://yourdomain.com

# ============================================================================
# Setup Instructions
# ============================================================================
# 1. Create Pera Wallet testnet account: https://perawallet.app
# 2. Fund with testnet ALGO: https://dispenser.testnet.algorand.network
# 3. Get API key from PureStake: https://www.purestake.com/
# 4. Create NFT badge ASAs using Algorand tools
# 5. Fill in all addresses and IDs above
# 6. Set ENABLE_BLOCKCHAIN=true to activate blockchain features
# See ALGORAND_SETUP.md for detailed instructions
